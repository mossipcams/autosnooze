{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for AutoSnooze services (mirrors services.yaml)",
  "services": {
    "pause": {
      "name": "Snooze",
      "fields": {
        "entity_id": {
          "required": true,
          "selector": {
            "entity": {
              "domain": "automation",
              "multiple": true
            }
          }
        },
        "days": {
          "required": false,
          "default": 0,
          "selector": {
            "number": {
              "min": 0,
              "max": 365
            }
          }
        },
        "hours": {
          "required": false,
          "default": 0,
          "selector": {
            "number": {
              "min": 0,
              "max": 23
            }
          }
        },
        "minutes": {
          "required": false,
          "default": 0,
          "selector": {
            "number": {
              "min": 0,
              "max": 59
            }
          }
        },
        "disable_at": {
          "required": false,
          "selector": {
            "datetime": {}
          }
        },
        "resume_at": {
          "required": false,
          "selector": {
            "datetime": {}
          }
        },
        "confirm": {
          "required": false,
          "default": false,
          "selector": {
            "boolean": {}
          }
        }
      }
    },
    "cancel": {
      "name": "Wake",
      "fields": {
        "entity_id": {
          "required": true,
          "selector": {
            "entity": {
              "domain": "automation",
              "multiple": true
            }
          }
        }
      }
    },
    "cancel_all": {
      "name": "Wake All",
      "fields": {}
    },
    "pause_by_area": {
      "name": "Snooze by Area",
      "fields": {
        "area_id": {
          "required": true,
          "selector": {
            "area": {
              "multiple": true
            }
          }
        },
        "days": {
          "required": false,
          "default": 0,
          "selector": {
            "number": {
              "min": 0,
              "max": 365
            }
          }
        },
        "hours": {
          "required": false,
          "default": 0,
          "selector": {
            "number": {
              "min": 0,
              "max": 23
            }
          }
        },
        "minutes": {
          "required": false,
          "default": 0,
          "selector": {
            "number": {
              "min": 0,
              "max": 59
            }
          }
        },
        "disable_at": {
          "required": false,
          "selector": {
            "datetime": {}
          }
        },
        "resume_at": {
          "required": false,
          "selector": {
            "datetime": {}
          }
        },
        "confirm": {
          "required": false,
          "default": false,
          "selector": {
            "boolean": {}
          }
        }
      }
    },
    "pause_by_label": {
      "name": "Snooze by Label",
      "fields": {
        "label_id": {
          "required": true,
          "selector": {
            "label": {
              "multiple": true
            }
          }
        },
        "days": {
          "required": false,
          "default": 0,
          "selector": {
            "number": {
              "min": 0,
              "max": 365
            }
          }
        },
        "hours": {
          "required": false,
          "default": 0,
          "selector": {
            "number": {
              "min": 0,
              "max": 23
            }
          }
        },
        "minutes": {
          "required": false,
          "default": 0,
          "selector": {
            "number": {
              "min": 0,
              "max": 59
            }
          }
        },
        "disable_at": {
          "required": false,
          "selector": {
            "datetime": {}
          }
        },
        "resume_at": {
          "required": false,
          "selector": {
            "datetime": {}
          }
        },
        "confirm": {
          "required": false,
          "default": false,
          "selector": {
            "boolean": {}
          }
        }
      }
    },
    "cancel_scheduled": {
      "name": "Cancel Scheduled Snooze",
      "fields": {
        "entity_id": {
          "required": true,
          "selector": {
            "entity": {
              "domain": "automation",
              "multiple": true
            }
          }
        }
      }
    },
    "adjust": {
      "name": "Adjust Snooze",
      "fields": {
        "entity_id": {
          "required": true,
          "selector": {
            "entity": {
              "domain": "automation",
              "multiple": true
            }
          }
        },
        "days": {
          "required": false,
          "default": 0,
          "selector": {
            "number": {
              "min": -365,
              "max": 365
            }
          }
        },
        "hours": {
          "required": false,
          "default": 0,
          "selector": {
            "number": {
              "min": -23,
              "max": 23
            }
          }
        },
        "minutes": {
          "required": false,
          "default": 0,
          "selector": {
            "number": {
              "min": -59,
              "max": 59
            }
          }
        }
      }
    }
  },
  "translation_keys": [
    "not_automation",
    "resume_time_past",
    "disable_after_resume",
    "invalid_duration",
    "invalid_adjustment",
    "adjust_time_too_short",
    "confirm_required"
  ]
}
