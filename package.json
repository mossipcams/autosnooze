{
  "name": "autosnooze",
  "version": "0.2.1",
  "description": "AutoSnooze - Temporarily pause Home Assistant automations",
  "main": "custom_components/autosnooze/www/autosnooze-card.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/*.spec.js",
    "lint:fix": "eslint src/ tests/*.spec.js --fix",
    "prepare": "husky || true"
  },
  "keywords": [
    "home-assistant",
    "lovelace",
    "custom-card"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "lit": "^2.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "rollup": "^4.9.6"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix"
    ],
    "tests/**/*.js": [
      "eslint --fix"
    ],
    "custom_components/**/*.py": [
      "ruff check --fix",
      "ruff format"
    ],
    "tests/**/*.py": [
      "ruff check --fix",
      "ruff format"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest.setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(lit|@lit|lit-html|lit-element)/)"
    ],
    "moduleNameMapper": {
      "^lit$": "<rootDir>/node_modules/lit/index.js",
      "^lit/(.*)$": "<rootDir>/node_modules/lit/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "lcov"
    ]
  }
}
