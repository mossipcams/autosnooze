{
  "name": "autosnooze",
  "version": "2.9.27",
  "description": "AutoSnooze - Temporarily pause Home Assistant automations",
  "main": "custom_components/autosnooze/www/autosnooze-card.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/*.spec.js",
    "lint:fix": "eslint src/ tests/*.spec.js --fix"
  },
  "keywords": ["home-assistant", "lovelace", "custom-card"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "lit": "^2.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rollup": "^4.9.6"
  },
  "jest": {
    "testMatch": ["**/tests/**/*.spec.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "coverageReporters": ["text", "text-summary", "html", "lcov"]
  }
}
